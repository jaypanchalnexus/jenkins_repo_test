<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
            <link href="{{ asset('css/app.css') }}" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('question-list') }}">Questions</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('new-question') }}">Add Question</a>
                </li>

            </ul>

            {% if is_granted('ROLE_USER') %}
            <span class="me-2">{{ app.user.displayName }}</span>

            <a href="{{ path('app_2fa_enable') }}" class="btn btn-danger btn-sm me-2">
                Enable 2FA
            </a>
            <a href="{{ path('app_logout') }}" class="btn btn-danger btn-sm me-2">
                Logout
            </a>
            {% else %}
            <a href="{{ path('app_login') }}" class="btn btn-success btn-sm me-2">
                Login
            </a>
            <a href="{{ path('app_register') }}" class="btn btn-success btn-sm me-2">
                Signup
            </a>
            {% endif %}
        </div>
    </nav>
    <div class="container">
        {% for flash in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flash }}
            </div>
        {% endfor %}

        {% for error_flash in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ error_flash }}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
    </div>

    </body>
</html>
